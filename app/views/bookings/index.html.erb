<div class="container mt-5">

  <strong><h1 id="title" class="mt-5 pt-2">Tus turnos!</h1></strong>

  <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="btn btn-primary active" id="pills-home-tab" data-toggle="pill" data-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Pendientes</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="btn btn-primary" id="pills-profile-tab" data-toggle="pill" data-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Finalizados</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="btn btn-primary" id="pills-contact-tab" data-toggle="pill" data-target="#pills-contact" type="button" role="tab" aria-controls="pills-contact" aria-selected="false">Cancelados</button>
    </li>
  </ul>
  <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
      <div class="cards">
        <div class="row">
          <% @accepted.each do |booking| %>
            <div class="col-12 col-md-4">
                <div class="card-product">
                  <%= cl_image_tag booking.provider.photos.first.key, class: "card-img-index" %>
                  <div class="card-product-infos">
                    <h2><%= booking.provider.name %></h2>
                    <p class="description" style="margin-bottom: 10px"><%= booking.provider.description %></p>
                      <%= simple_form_for booking do |f| %>
                        <%= f.hidden_field :status, value: "canceled" %>
                        <%=f.submit "Reject", id: "sweet-alert-rejected", class: "text-danger" %>
                      <% end %>
                  </div>
                </div>
            </div>
          <% end %>
        </div>
      </div>    
    </div>
    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
    
      <div class="cards">
        <div class="row">
          <% @completed.each do |booking| %>
            <div class="col-12 col-md-4">
                <div class="card-product">
                  <%= cl_image_tag booking.provider.photos.first.key, class: "card-img-index" %>
                  <div class="card-product-infos">
                    <h2><%= booking.provider.name %></h2>
                    <p class="description" style="margin-bottom: 10px"><%= booking.provider.description %></p>
                    <% if booking.review.blank? %>
                      <button type="button" class="btn btn-light" style="border-radius: 10px;" data-toggle="modal" data-target="#exampleModal"><%= link_to 'Opinar', new_booking_review_path(booking) %></button>
                    <% else %>
                      <button type="button" class="btn btn-light" style="border-radius: 10px;"  data-toggle="modal" data-target="#exampleModal"> Ver opinión</button>
                      <!-- Modal -->
                      <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h5 class="modal-title" id="exampleModalLabel">Tu opinión</h5>
                              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                              </button>
                            </div>
                            <div class="modal-body">
                              <%= booking.review.content %>
                              <% booking.review.rating.times do %>
                                <i class="fas fa-star"></i>
                              <% end %>
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            </div>
                          </div>
                        </div>
                      </div>
                    <% end %>
                  </div>
                </div>     
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
      <div class="cards pb" style="padding-bottom: 80px">    
        <div class="row">
          <% @canceled.each do |booking| %>
            <div class="col-12 col-md-4">
                <div class="card-product">
                  <%= cl_image_tag booking.provider.photos.first.key, class: "card-img-index" %>
                  <div class="card-product-infos">
                    <h2><%= booking.provider.name %></h2>
                    <p class="description" style="margin-bottom: 10px"><%= booking.provider.description %></p>
                  </div>
                </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
