<!--Nuestros negocios -->
<div class="container">
  <h3 id="title">Nuestros negocios favoritos</h3>
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <% @providers.each_with_index do |provider, index| %>
        <%= link_to provider_path(provider) do  %>
          <div class="carousel-item <%= index == 0 ? 'active' : "" %>">
            <div class="col-12 col-md-4 col-lg-3 mt-3">
              <div class="card">
                <%= cl_image_tag provider.photos.first.key %>
                <div class="card-body bg-light">
                  <p class="color-text"><%= provider.category %></span></p>
                  <h5 class="card-title"> <strong><%= provider.name %></h5></strong>
                  <p><strong>Rating:</strong> <% 4.times do  %> <i class="fas fa-star" style="color: #FE6929"></i>
                <% end %></p>
                </div>
              </div>
            </div>
          </div>
        <%end %>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

