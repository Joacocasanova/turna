<div id="carouselExampleControls" class="carousel slide hidden-md hidden-sm col-xs-12" data-ride="carousel">
  <div class="carousel-inner">
    <% @providers.each_with_index do |provider, index| %>
      <div class="carousel-item <%= index == 0 ? 'active' : "" %>">
        <%= link_to provider_path(provider) do  %>
          <div class="col-12 col-md-4 col-lg-3 mt-3">
            <div class="card rounded-3 h-100">
              <%= cl_image_tag provider.photos.first.key, class: "carousel-img" %>
              <div class="card-body bg-light">
                <h5 class="card-title mb-1"> <strong><%= provider.name %></h5></strong>
                <% provider.rating.times do %>
                  <i class="fas fa-star my-2" style="font-size: 10px"></i>
                <% end %>
                <p class="text-dark fs-6 fw-bolder mb-0"><%= provider.category %></span></p>
                <p style="font-size: 12px" class="text-dark  my-0"><%= provider.neighborhood.partition(",").first %></p>
                <p style="font-size: 12px" class="text-dark font-italic"><%= provider.address.partition(",").first %></p>
                <div class= "d-flex">
                  <p class="distance m-0 pr-4" data-latitude="<%= provider.latitude%>" data-longitude="<%= provider.longitude%>"></p>
                  <i class="fas fa-location-arrow"></i>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>