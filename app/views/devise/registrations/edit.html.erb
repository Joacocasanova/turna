<%= render 'shared/container' %>
<div class="user-form">
  <div class="container">
    <h2 style="color:#FE6929"><strong>Mi Perfil</strong></h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :password,
                    hint: "Deja el espacio en blanco si no queres cambiar la contraseña",
                    required: false,
                    input_html: { autocomplete: "new-password" },
                    label: 'Nueva Contraseña' %>
        <%= f.input :password_confirmation,
                    required: false,
                    label: "Confirmar nueva contraseña",
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :current_password,
                    hint: "Necesitamos tu contraseña actual para confirmar los cambios",
                    required: true,
                    label: "Confirmar actual contraseña",
                    input_html: { autocomplete: "current-password" } %>
      </div>


        <div class="row">
          <div class="col-sm-4">
            <% if resource.avatar.attached? %>
              <%= cl_image_tag resource.avatar.key, class:"rounded-circle",height: 100, width: 100 %>
            <% else %>
              <%= image_tag 'https://res.cloudinary.com/dmtio0viw/image/upload/v1613231512/Turna/default_avatar_ybtke3.png', height: 100, width: 100, class:"rounded-circle" %>
            <% end %>
          </div>
          <div class="col-sm-8 mt-2">
            <%= f.input :avatar, as: :file %>
          </div>
        </div>

      <div class="form-actions">
        <%= f.button :submit, "Actualizar", class:"btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
<%= render 'shared/container' %>

