<div class="user-form">
  <div class="container">
    <h2 class="mt-5" style="color:#FE6929"><strong>Iniciar Sesión</strong></h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" },
                    label: 'Contraseña' %>
        <%= f.input :remember_me, as: :boolean, :label => "Recuerdame" if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Ingresar", class:"btn btn-primary my-3" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>