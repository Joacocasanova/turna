<div class="cards w-100" style="padding: 0">
  <div class="row">
    <div class="col-12">
    	<div class="card-product d-flex" style="margin: 0">
        <%= cl_image_tag provider.photos.first.key, class: "card-img-index" %>
          <div id="map-card" class="card-product-infos h-100" style="padding: 2">
            <h2><%= provider.name %></h2>
              <p class="description" style="margin: 0"><%= truncate(provider.description, length: 23) %></p>
              <% provider.rating.times do %>
              	<i class="fas fa-star" style="font-size: 10px"></i>
              <% end %>
              <div class= "d-flex justify-content-between mr-2">
                <p class="price" style="margin: 0">Precio promedio: <strong>$<%= provider.avg_price %></strong></p>
              </div>
              	<div class="d-flex justify-content-between my-2">
                <% if params["action"] == "index" %>
            			<%= link_to "MÃ¡s Info", provider_path(provider)%>
                <% end %>
              	</div>
          </div>
      </div>
    </div>
  </div>
</div>