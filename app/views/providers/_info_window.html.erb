<div class="card">
	<%= cl_image_tag provider.photos.first.key, class: "w-100 mb-1" %>
	<div class="card-body bg-light p-2">
		<p class="color-text" style="margin: 0"> <%= provider.address %></span></p>
		<h6 class="card-title" style="margin: 0"> <%= truncate(provider.name, length: 15) %></h6>
		<span><strong>Rating:</strong> <% provider.rating.times do  %>
		<i class="fas fa-star"></i>
		<% end %></span>
	</div>
	<div class="d-flex justify-content-between mx-2">
    <%= link_to "More Info", provider_path(provider)%>
	</div>
</div>