                <%= f.input :neighborhood, label: "Barrio", placeholder: "Barrio", input_html: { id: :provider_neighborhood1 } %>
                <%= f.input :description, label: "Descripción", placeholder: "Describí tu negocio" %>
                <%= f.input :opening_time, as: :time, label: "Horario de apertura" %>
                <%= f.input :closing_time, as: :time, label: "Horario de cierre" %>

