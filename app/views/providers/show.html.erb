<div class="container mt-3">
  <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= @provider.category %></li>
      <li class="breadcrumb-item"><%= @provider.neighborhood %></li>
      <li class="breadcrumb-item active" aria-current="page"><%= @provider.name %></li>
    </ol>
  </nav>
  <hr class="separador">

  <h6 style="color:#FE6929"><strong><%= @provider.name %></strong></h6>

  <h6 class="subtitle">Descripci칩n</h6>

  <p><%= @provider.description %></p>

  <hr>

  <h6 class="subtitle">Ubicaci칩n</h6>
  <p style="color: #848484"><%= @provider.address %> </p>
  <p>Horarios <%= @provider.opening_time.strftime("%k:%M") %> hs a <%= @provider.closing_time.strftime("%k:%M")  %> hs</p>

    <div class="mapa" style="padding: 10px">
      <div id="map"
      style="width: 100%; height: 300px; border-radius: 10%"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
     </div>
    </div>

    <hr>
  <section class="team-section text-center my-5">

    <!-- Section heading -->
    <h2 class="h1-responsive font-weight-bold my-2" >Necesitas mas informaci칩n?</h2>
    <!-- Section description -->
    <p class="dark-grey-text w-responsive mx-auto mb-5">Encontr치 debajo las recomendaciones de otros usuarios!</p>

    <!--Grid row-->
    <div class="row text-center">
        <% @provider.reviews.each do |review| %>
          <!--Grid column-->
          <div class="col-md-4 mb-md-0 mb-5">

            <div class="testimonial">
              <!--Avatar-->
                <%= cl_image_tag review.user.avatar.key, style:"height:150px;width:150px", class:"rounded-circle mr-2" %>
              <!--Content-->
              <h4 class="font-weight-bold dark-grey-text mt-4"><%= review.user.name %></h4>
              <p class="font-weight-normal dark-grey-text">
                <i class="fas fa-quote-left pr-2" style="color:#FE6929"></i><%= review.content %></p>
              <!--Review-->
              <div class="orange-text">
                <p><strong>Rating:</strong><% review.rating.times do  %> <i class="fas fa-star"></i>
                <% end %></p>
              </div>
            </div>
          </div>
        <% end %>

      </div>

</section>
  <hr>

    <h2 class="subtitle text-center font-weight-bold my-2">Servicios</h6>
      <div class="container">
        <div class="d-flex justify-content-around row">
          <% @provider.services.each do |provider_service| %>
            <div class="col-12 col-md-4 text-center">
              <div class=" d-flex flex-column align-items-center">
                <%= cl_image_tag provider_service.icon.key, style:"height:150px;width:150px", class:"rounded-circle m-4" %>
                <h5><%= provider_service.title %></h5>
              </div>
            </div>
          <% end %>
        </div>
      </div>

    <hr>
    <h5>Saca tu turno!</h5>
    <div class="col-12">
      <div class="flat-show-card">
        <%= simple_form_for [@provider, @booking] do |f| %>
        <%=f.input :start_datetime, as: :string, required: false, input_html: {class: "datepicker", data: {opening_time: @provider.opening_time, closing_time: @provider.closing_time }}  %>
          <%=f.submit "Reservar!", class: "btn btn-primary mt-2 textclass" %>
        <% end %>

      </div>
    </div>

  <div class="container" style="height:100px">
  </div>
<%= render 'shared/container' %>