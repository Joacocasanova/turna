<div class="container mt-3">
  <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= @provider.category %></li>
      <li class="breadcrumb-item">BARRIO HARDCODED</li>
      <li class="breadcrumb-item active" aria-current="page"><%= @provider.name %></li>
    </ol>
  </nav>
  <hr class="separador">

  <h6 style="color:#FE6929"><strong><%= @provider.name %></strong></h6>

  <h6 class="subtitle">Descripción</h6>

  <p><%= @provider.description %></p>

  <hr>

  <h6 class="subtitle">Ubicación</h6>
  <p style="color: #848484"><%= @provider.address %> </p>
  <p>Horarios HARDCODED</p>

    <div class="mapa" style="padding: 10px">
    <div id="map"
      style="width: 100%; height: 300px; border-radius: 10%"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>

  <hr>
<section class="team-section text-center my-5">

  <!-- Section heading -->
  <h2 class="h1-responsive font-weight-bold my-2" >Necesitas mas información?</h2>
  <!-- Section description -->
  <p class="dark-grey-text w-responsive mx-auto mb-5">Encontrá debajo las recomendaciones de otros usuarios!</p>

  <!--Grid row-->
  <div class="row text-center">
      <% @provider.reviews.each do |review| %>
        <!--Grid column-->
        <div class="col-md-4 mb-md-0 mb-5">

          <div class="testimonial">
            <!--Avatar-->
              <%= cl_image_tag review.user.avatar.key, style:"height:150px;width:150px", class:"rounded-circle mr-2" %>
            <!--Content-->
            <h4 class="font-weight-bold dark-grey-text mt-4"><%= review.user.name %></h4>
            <p class="font-weight-normal dark-grey-text">
              <i class="fas fa-quote-left pr-2" style="color:#FE6929"></i><%= review.content %></p>
            <!--Review-->
            <div class="orange-text">
              <p><strong>Rating:</strong><% review.rating.times do  %> <i class="fas fa-star"></i>
              <% end %></p>
            </div>
          </div>
        </div>
      <% end %>

    </div>

</section>
<!-- Section: Testimonials v.3 -->
